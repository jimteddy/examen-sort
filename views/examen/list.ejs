<% if (locals.examens) { %>
<table class="table table-bordered table-hover table-primary table-striped mt-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Libelle</th>
            <th>Description</th>
            <th>Date Debut</th>
            <th>Date de fin</th>
            <th class="text-warning" >Modifier</th>
            <th class="text-danger">Supprimer</th>
        </tr>
    </thead>
    <tbody>
        <% examens.forEach(examen => { %>
        <tr>
            <td><%= examen.id %></td>
            <td><%= examen.libelle %></td>
            <td><%= examen.description.substring(0, 10).concat('...') %></td>
            <td><%= examen.dateDebut %></td>
            <td><%= examen.dateFin %></td>
            <td><button class="btn btn-warning" ><a href="/examen/detail/<%= examen.id %>">Modifier</a></button></td>
            <td><button class="btn btn-danger" ><a href="/examen/detail/<%= examen.id %>">Supprimer</a></button></td>
        </tr>
        <% }) %>
    </tbody>
</table>
<% } else { %>
    <div class="mt-2">
        <h3>Aucun élèment dans la liste</h3>
    </div>
<% } %>